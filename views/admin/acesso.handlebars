<!-- Configuração específica de estilos para elementos HTML nesta página -->
<style>
  body{
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Estilo para o título, posiciona-o com uma margem superior de 15vh e define a cor do texto */
  #titulo {
    margin-top: 15vh; /* Espaçamento superior do título */
    color: blueviolet; /* Cor do texto do título */
  }

  /* Estilo para os cartões, adiciona uma margem superior */
  .card {
    margin-top: 5vh; /* Espaçamento superior do cartão */
  }

  /* Estilo para o botão de criar, define a cor do texto como branco */
  #btnCriar {
    color: white; /* Cor do texto do botão */
  }

  #retornarP{
  display: none;
}

  #ini{
    display: none;
  }

  #sobre{
    display: none;
  }

  /* Esconde o elemento com id 'sair' */
  #sair {
    display: none; /* O elemento não será exibido */
  }

  #senhaOlho{
    border-left: none !important;
  }

  #senha{
    border-right: none !important;
  }

  #imgLogo{
  width: 8rem;
  height: 4.5rem;
}

</style>

<!-- Exibição de erros (se houver) usando um loop Handlebars -->
{{#each erros}}
  <div class="alert alert-danger">
    {{texto}} <!-- Exibe o texto do erro -->
  </div>
{{else}}
  <!-- Se não houver erros, nada será exibido -->
{{/each}}



<div class="container" style="display:flex; align-items: center; flex-direction:column">

  <!-- Título da página com um link para registro -->
  <h2 id="titulo">
    Login:  
    <a href="/admin/dados/add">
      <button class="btn btn-info" id="btnCriar">
        Criar
        <svg
          xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right"
          viewBox="0 0 16 16">
          <path fill-rule="evenodd"
            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8" />
        </svg>
      </button>
    </a>
  </h2>


  <!-- Div para o formulário de login -->
  <div class="card" style="width: 25rem;">
    <div class="card-body">
      <!-- Formulário para login -->
      <form action="/admin/acesso" method="post">
        <!-- Campo para email -->
        <label for="nome">
          User:
        </label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-person-fill" viewBox="0 0 16 16">
            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
            </svg>
          </span>
        <input
          class="form-control"
          type="text"
          name="usuario"
          id="usuario"
          placeholder="Username"
          required
        />
        </div>
        
        <br />

        <!-- Campo para senha -->
        <label for="senha">
          Password:
        </label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-key" id="olhoAberto" viewBox="0 0 16 16">
            <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8m4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5"/>
            <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
            </svg>
          </span>
          <input
            class="form-control"
            type="password"
            name="senha"
            id="senha"
            placeholder="Password"
            required
          />
          <span id="senhaOlho" class="input-group-text"><img src="../img/eye-slash.svg" id="olho" alt=""></span>
        </div>

        <!-- Botão de submissão do formulário -->
        <div class="mt-4">
          <button class="btn btn-primary" type="submit">
            Entrar
          </button>
        </div>
      </form>
    </div>
  </div>

</div>

<!-- Função usada para dar funcionalidade ao icon do olho, dentro da senha-->
 <script>
        let btn = document.querySelector('#olho');

        btn.addEventListener('click', function() {
            let input = document.querySelector('#senha');

           if (input.getAttribute('type') == 'password') {
                input.type = 'text';
                btn.src = '../img/eye.svg'
               
            } else {
                input.type = 'password';
                btn.src = '../img/eye-slash.svg';
            }
        });
    </script>

   