 <script>
  document.addEventListener("DOMContentLoaded", () => {
    const tabelaBody = document.getElementById("tabelaBody");
    const inputBusca = document.getElementById("inputBusca");
    const formBusca = document.getElementById("formBusca");
    let produtos = []; // Armazena os produtos carregados

    // Carregar os produtos do backend ao iniciar a página
    fetch('/admin/estoqueEquipamentos/json')
      .then(response => response.json())
      .then(data => {
        produtos = data; // Salva os produtos na variável
        exibirProdutos(agruparPorMarca(produtos)); // Exibe todos os produtos agrupados ao carregar
      })
      .catch(error => console.error("Erro ao carregar os dados:", error));

    // Filtrar produtos quando o usuário digitar no campo de busca
    formBusca.addEventListener("submit", (event) => {
      event.preventDefault(); // Evita que a página recarregue ao enviar o formulário
      const termoBusca = inputBusca.value.trim().toLowerCase(); // Captura e formata o texto digitado

      // Filtrar os produtos pela marca digitada
      const produtosFiltrados = produtos.filter(produto => 
        produto.marca.toLowerCase().includes(termoBusca) // Filtra pela marca
      );

      // Atualiza a tabela com os resultados filtrados e agrupados
      exibirProdutos(agruparPorMarca(produtosFiltrados));
    });

    // Função para agrupar produtos por marca e somar quantidades
    function agruparPorMarca(listaProdutos) {
      const agrupado = listaProdutos.reduce((acc, produto) => {
        if (!acc[produto.marca]) {
          acc[produto.marca] = { marca: produto.marca, totalQtd: 0, produtos: [] };
        }
        acc[produto.marca].totalQtd += produto.qtd; // Soma as quantidades da mesma marca
        acc[produto.marca].produtos.push(produto); // Adiciona o produto na lista
        return acc;
      }, {});

      return Object.values(agrupado); // Retorna como array
    }

    // Função para exibir os produtos na tabela
    function exibirProdutos(marcasAgrupadas) {
      tabelaBody.innerHTML = ""; // Limpa a tabela antes de adicionar novos dados

      marcasAgrupadas.forEach(item => {
       
        const linhaMarca = document.createElement("tr");
        linhaMarca.innerHTML = `
          <td colspan="2"><strong>${item.marca}</strong></td>
          <td colspan="2"><strong>Quantidade Total: ${item.totalQtd}</strong></td>
        `;
        tabelaBody.appendChild(linhaMarca);

        // Linhas para exibir os produtos dessa marca
        item.produtos.forEach(produto => {
          const linhaProduto = document.createElement("tr");

          
  const dataFormatada = produto.dataCriacao 
  ? formatarData(produto.dataCriacao) 
  : "Data inválida";

          linhaProduto.innerHTML = `
            <td>${produto.marca}</td>
            <td>${produto.mac}</td>
            <td>${produto.qtd}</td>
            <td>${dataFormatada}</td>
            <td>${produto.observacao}</td>
            <td>
            
              <a href="/admin/produtos/edit/${produto._id}">
                <button class="btn btn-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"></path>
                  </svg>
                </button>
              </a>
            </td>

            <td>
               <!-- Formulário para deletar -->
                <form action="/admin/estoqueEquipamentos/deletar" method="post">
                  <input type="hidden" name="id" value="${produto._id}" />
                  <button type="submit" class="btn btn-danger mt-2" id="delet">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                      <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                      <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                    </svg>
                  </button>
                </form>
            </td>
          `;
          tabelaBody.appendChild(linhaProduto);
        });
      });
    }

  });

  function formatarData(dataISO) {
  if (!dataISO) return "Data inválida";

  // Converter para Date garantindo que a entrada é válida
  const data = new Date(dataISO);
  
  if (isNaN(data.getTime())) return "Data inválida"; // Caso a conversão falhe

  return data.toLocaleDateString('pt-BR', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric'
  });
}


