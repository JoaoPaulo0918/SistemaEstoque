<script>
  // Função para buscar os dados
  async function carregarOrdensServico() {
      try {
          // Fazendo a requisição para a rota /estoqueMateriais/json
          const response = await fetch('/admin/estoqueMateriais/json');
          
          if (!response.ok) {
              throw new Error('Erro ao buscar os dados');
          }

          // Convertendo a resposta em JSON
          const materiais = await response.json();
          
          // Selecionando o corpo da tabela onde os dados serão inseridos
          const tabelaDados = document.getElementById('tabelaBody');
          
          // Limpando a tabela antes de inserir os dados
          tabelaDados.innerHTML = '';

          // Pegando o valor do campo de busca
          const termoBusca = document.getElementById('inputBusca').value.toLowerCase();

          // Filtrando os materiais com base no nome
          const materiaisFiltrados = materiais.filter(material => 
              material.nome.toLowerCase().includes(termoBusca)
          );

          // Preenchendo a tabela com os dados filtrados
          materiaisFiltrados.forEach(material => {
              const row = document.createElement("tr");

              const dataFormatada = new Date(material.dataCriacao).toLocaleDateString('pt-BR', {
                  day: '2-digit',
                  month: '2-digit',
                  year: 'numeric'
              });

              row.innerHTML = `
                  <td>${material.nome}</td>
                  <td>${material.marca}</td>
                  <td>${material.qtd}</td>
                  <td>${dataFormatada}</td> <!-- Data formatada corretamente -->
                  <td>${material.observacao}</td>
                  <td>
                      <a href="/admin/materiais/edit/${material._id}">
                          <button class="btn btn-primary" id="edit">
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                  <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"></path>
                              </svg>
                          </button>
                      </a>
                  </td>
                  <td>
                      <form action="/admin/materiais/deletar" method="post">
                          <input type="hidden" name="id" value="${material._id}" />
                          <button type="submit" class="btn btn-danger mt-2" id="delet">
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                                  <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                              </svg>
                          </button>
                      </form>
                  </td>
              `;
              tabelaDados.appendChild(row);
          });

      } catch (error) {
          console.error(error);
      }
  }

  // Função para manipular a busca no formulário
  document.getElementById('formBusca').addEventListener('submit', function(event) {
      event.preventDefault(); // Impede o envio do formulário
      carregarOrdensServico(); // Chama a função de carregar os dados novamente com o filtro aplicado
  });

  // Carregar as ordens de serviço ao carregar a página
  window.onload = carregarOrdensServico;
</script>

  
  
   