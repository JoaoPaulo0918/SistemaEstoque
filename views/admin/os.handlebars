<!--Script para receber todos os dados-->
<script>
  async function carregarOrdensServico() {
    try {
      const response = await fetch('/admin/ordemServico/dados');
      if (!response.ok) throw new Error('Erro ao buscar os dados');

      const ordensServico = await response.json();
      renderizarTabela(ordensServico);
    } catch (error) {
      console.error(error);
    }
  }

  function renderizarTabela(ordens) {
    const tabelaDados = document.getElementById('tabelaDados');
    tabelaDados.innerHTML = '';

    ordens.forEach(ordem => {

       const dataFormatada = new Date(ordem.dataCriacao).toLocaleDateString('pt-BR', {
                  day: '2-digit',
                  month: '2-digit',
                  year: 'numeric'
              });
      
      const row = document.createElement('tr');
      row.innerHTML = `
        <td>${ordem.diaSemana}</td>
        <td class="qtd">${ordem.qtd}</td>
        <td class="data">${dataFormatada}</td>
        <td>${ordem.observacao}</td>
      `;
      tabelaDados.appendChild(row);
    });
  }


  document.getElementById('inputBusca').addEventListener('input', () => {
    const filtro = document.getElementById('inputBusca').value.trim();
    const linhas = document.querySelectorAll('#tabelaDados tr');

    linhas.forEach(linha => {
      const dataCelula = linha.querySelector('.data').textContent;
      linha.style.display = dataCelula.includes(filtro) ? '' : 'none';
    });
  });

  document.getElementById('btnSoma').addEventListener('click', () => {
    let soma = 0;
    document.querySelectorAll('.qtd').forEach(td => {
      soma += parseInt(td.textContent) || 0;
    });
    alert(`Total de Quantidade: ${soma}`);
  });

  window.onload = carregarOrdensServico;
</script>

<!--Script para deletar tudo usando uma condição-->
<script>
  document.getElementById("btnDeletarTudo").addEventListener("click", function () {
    if (confirm("Tem certeza que deseja deletar todas as ordens de serviço? Essa ação não pode ser desfeita!")) {
        fetch("/admin/ordemServico/deletar-tudo", {
            method: "POST",
            headers: { "Content-Type": "application/json" }, // Define o cabeçalho correto
            body: JSON.stringify({}) // Envia um corpo vazio
        })
        .then(response => response.json())
        .then(data => {
          
            if (data.success) {
                alert("Todas as ordens foram deletadas com sucesso!");
                location.reload();
            } else {
                alert("Erro ao deletar as ordens de serviço.");
            }
        })
        .catch(error => console.error("Erro:", error));
    }
  });
</script>
